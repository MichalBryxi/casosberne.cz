<br />

<div class="row">
  <div class="col s6">
    {{#link-to "projects"}}
      {{fa-icon icon="fa-chevron-left"}}
      {{t "project.allProjects"}}
    {{/link-to}}
  </div>

  <div class="col s6 right-align">
    <a href="https://twitter.com/search?q=%23{{model.hashtag}}&src=typd">
      {{fa-icon icon="fa-twitter"}}
      #{{model.hashtag}}
    </a>
  </div>
</div>

<h2 class="project-heading">
  {{~ model.name ~}}
</h2>

<div class="fixed-action-btn horizontal click-to-toggle">
  <a class="btn-floating btn-large red">
    <i class="large mdi-content-add"></i>
  </a>
  <ul>
    <li>
      <a href="mailto:casosberne@gmail.com?subject=#{{model.hashtag}}" class="btn-floating red">
        {{fa-icon icon="envelope"}}
      </a>
    </li>
    <li>
      <a href="https://twitter.com/intent/tweet?hashtags={{model.hashtag}}" class="btn-floating blue">
        {{fa-icon icon="twitter"}}
      </a>
    </li>
  </ul>
</div>

<p class="project-description">
  {{~ md-text text=model.description ~}}
</p>

<div class="row">
  {{#photo-swipe items=photosSorted as |elm|}}
    <div class="col s4 m3 l2">
      {{x-post post=elm}}
    </div>
  {{/photo-swipe}}
</div>
